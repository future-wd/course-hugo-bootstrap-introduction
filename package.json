{
  "name": "course-hugo-bootstrap-introduction",
  "version": "0.0.1",
  "scripts": {
    "dev": "hugo server --gc --disableFastRender",
    "dev:preview": "npm run dev -- --buildDrafts --buildFuture",
    "build": "hugo --verbose --gc --minify --cleanDestinationDir",
    "renderToDisk": "hugo server --gc --disableFastRender --renderToDisk --cleanDestinationDir",
    "renderToDisk:preview": "npm run renderToDisk -- --buildDrafts --buildFuture",
    "renderToDisk:production": "npm run renderToDisk -- --environment production --minify",
    "hugo-version": "hugo version"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/future-wd/course-hugo-bootstrap-introduction.git"
  }
}